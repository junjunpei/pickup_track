<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="text-center">
        <h1><%= t '.title' %></h1>
      </div>
      <%= form_with(url: login_path, local: true) do |f| %>
				<div class="mb-3">
					<%= f.label :email, User.human_attribute_name(:email), class: 'form-label login-label' %>
					<%= f.text_field :email, class: 'form-control' %>
				</div>
				<div class="mb-3">
					<%= f.label :password, User.human_attribute_name(:password), class: 'form-label login-label' %>
					<%= f.password_field :password, class: 'form-control' %>
				</div>
				<div class="text-center  button">
					<%= f.submit (t '.login'), class: 'btn btn-success btn-lg' %>
				</div>
      <% end %>
			<div class="text-center">
				<%= link_to (t '.to_register_page'), new_user_path %>
			</div>
    </div>
  </div>
</div>
